{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ES2015",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2015"
  },
  "include": [
    "src",
    "test",
    ".eslintrc.js",
    "jest.config.js"
  ],
  "exclude": [
    "**/node_modules",
    "dist"
  ]
}
